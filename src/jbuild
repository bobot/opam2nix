; vim: set syntax=lisp commentstring=;\ %s:
(jbuild_version 1)

(library (
	(name opam2nix)
	; (public_name opam2nix)
	(modules (:standard \ main))
	(libraries (
		str
		; unix
		yojson
		opam-solver
		opam-state
		lwt
		lwt.unix
		curl
		fileutils
		xdg-basedir
	))
))

(executable (
	(name main)
	(modules main)
	(public_name opam2nix)
	(libraries (opam2nix))
))

(rule (
	(targets (version.ml))
	(deps ((universe)))
	(action (run gup -u ${@}))
))

